{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noImplicitThis": true,
    "paths": {
      "..": ["src/*"]
    }
  },
  "include": ["src/**/*", "docs/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
